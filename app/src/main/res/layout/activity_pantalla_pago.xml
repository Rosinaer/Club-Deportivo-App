    <!-- SubtÃ­tulo -->
    <!-- Formulario -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:text="Pago"
        android:textSize="25dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="613dp"
        android:layout_marginBottom="122dp"
        android:gravity="center"
        android:orientation="vertical">

        <!-- ID Cliente -->
        <!-- Tipo de Cliente -->
        <EditText
            android:id="@+id/txtIdCliente"
            android:layout_width="110dp"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:hint="idCliente"
            android:inputType="text"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtTipoCliente"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Tipo Cliente"
            android:textSize="15sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">
            <RadioGroup
                android:id="@+id/rgOptCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

            <RadioButton
                android:id="@+id/cbSocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Socio" />

            <RadioButton
                android:id="@+id/cbNoSocio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="No Socio" />
            </RadioGroup>

        </LinearLayout>

        <TextView
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:text="Forma de Pago"
            android:textSize="25dp" />
        <LinearLayout
            android:id="@+id/linearFormaPago"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cbEfectivo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efectivo" />

            <CheckBox
                android:id="@+id/cbTarjeta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="Tarjeta" />

        </LinearLayout>
        <!-- Importe Total -->
        <EditText
            android:id="@+id/txtMonto"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:hint="Importe"
            android:inputType="numberDecimal"
            android:textSize="15sp" />
        <!-- Boton Pago -->
        <Button
            android:id="@+id/btnPagar"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:text="Realizar Pago"
            android:textSize="15sp" />
        <!-- Boton Cancelar -->
        <Button
            android:id="@+id/btnCancelar"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:text="Cancelar"
            android:textSize="15sp" />
        <!-- Boton Volver Menu Principal -->
        <Button
            android:id="@+id/btnVolver"
            android:layout_width="235dp"
            android:layout_height="48dp"
            android:layout_marginBottom="10dp"
            android:text="Menu Principal"
            android:textSize="15sp" />

    </LinearLayout>

</LinearLayout>